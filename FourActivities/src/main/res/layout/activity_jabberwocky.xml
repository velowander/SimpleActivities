<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JabberWocky"
    tools:ignore="MergeRootFrame"
    android:weightSum="1">

    <WebView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/webViewJW"
        android:layout_weight="0.70"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.20"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp" >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="@string/textButtonWiki"
            android:id="@+id/buttonWiki"
            android:onClick="wikiButtonOnClick" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:onClick="pictureButtonToggle"
            android:text="@string/togglePictureButtonCaption"
            android:id="@+id/buttonPicture"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_weight="0.10"
        android:text="@string/jw_credit_caption"
        android:id="@+id/textView" />

</LinearLayout>
